{
    "compilerOptions": {
        "lib": ["es2022", "dom"],
        "target": "es2022",
        "module": "none",
        "outDir": "./", 
        "rootDir": "./", 
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true, 
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node"
    },
    "include": [
        "*.ts" 
    ],
    "exclude": [
        "node_modules"
    ]
}
