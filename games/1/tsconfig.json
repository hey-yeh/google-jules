{
    "compilerOptions": {
        "target": "es6",
        "module": "amd",
        "outDir": "./", 
        "rootDir": "./", 
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true, 
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "moduleResolution": "node"
    },
    "include": [
        "*.ts" 
    ],
    "exclude": [
        "node_modules"
    ]
}
